extends ./layouts/base

block contenido 
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}
        blockquote.text-center.mb-5 Lee sobre nuestros Clientes y sus experiencias 
        include ./layouts/bloque_testimoniales
        .row
            .col-md-12
                h2.d-block.w-100.text-center.mt-5 Agrega un Testimonial
                if(errores) 
                    each error in errores
                        .alert.col.alert-danger.text-center= error.mensaje
            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimoniales" method="post")
                        .form-group
                            label(for='nombre') Nombre
                            input#nombre.form-control(type='text', placeholder='Tu Nombre', name="nombre", value=nombre)
                        .form-group
                            label(for='correo') Correo Electrónico
                            input#correo.form-control(type='email', placeholder='Tu Correo Electrónico', name="correo", value=correo)
                        .form-group
                            label(for='mensaje') Mensaje
                            textarea#mensaje.form-control(name="mensaje", rows=3, placeholder="Tu Mensaje")= mensaje
                        input.btn.btn-success.btn-block(type="submit")